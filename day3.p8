pico-8 cartridge // http://www.pico-8.com
version 38
__lua__
pal({8,9,10,11,12,1,2}, 1)

function _init()
	i=0
end

function _draw()
	for x=0,127 do
		for y=0,127 do
			if i%2==0 then
				pset(x,y,((x+y)%7)+i)
			else
				pset(x,y,((x+y)%7)-i)
			end
		end
	end

	if i+1 > 32767 then
		i=0
	else
		i+=1
	end
end
