pico-8 cartridge // http://www.pico-8.com
version 39
__lua__
t=0

function _init()
	cls()
	for x=0,127 do
		for y=0,127 do
			pset(x,y,x)
		end
	end
end

function _draw()
	t=t+0.05
	
	-- circles
	for i=1,5 do
		a=t+3.14159*2/5 * i
		circfill(80+20*cos(a),60+20*sin(a),3+sin(t)*3,2)
	end
	
	-- pixel manipulation
	for i=0,16384 do
		local x=flr(i%128)
		local y=flr(i/128)
		local c=0
		if x<128 then
			c=pget(x+1,y)
		end
		pset(x,y,c+1)
	end
end


